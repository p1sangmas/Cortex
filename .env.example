# DocuMind Docker Environment Configuration

# Timezone - will be set automatically by the run_docker.sh script
TZ=UTC

# Enable debug mode for development
DEBUG=false

# Port configuration (if you change these, also update the docker-compose.yml file)
WEB_UI_PORT=8080
API_PORT=8000
OLLAMA_PORT=11434

# GPU configuration
# Set to "true" to explicitly enable GPU support
# or "auto" to let the system detect GPU availability
ENABLE_GPU=auto

# n8n Configuration (optional - for automation workflows)
N8N_PORT=5678
N8N_BASE_URL=http://cortex-n8n:5678
N8N_USER=admin
N8N_PASSWORD=changeme123

# Serper.dev API Key (for web search tool)
# Get your free API key at: https://serper.dev (2,500 queries/month free)
SERPER_API_KEY=your_serper_api_key_here

# Telegram Bot Configuration (optional - for Telegram interface)
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
